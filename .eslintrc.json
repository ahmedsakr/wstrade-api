{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-plusplus": ["error", {
            "allowForLoopAfterthoughts": true
        }],
        "no-use-before-define": ["error", { "functions": false }]
    }
}
